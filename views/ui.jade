doctype html
html
	head
		title Client UI
		link(rel='stylesheet', href='/bower_components/bootstrap/dist/css/bootstrap.min.css')
		link(rel='stylesheet', href='/bower_components/bootstrap/dist/css/bootstrap-theme.min.css')
		link(rel='stylesheet', href='/stylesheets/clientui.css')

	body
		div.container
			div
				input#id(type='text') 
				button#authbtn.btn.btn-default(type='submit') Auth
				div
					span#friend.label.label-default To
			div
				ul#friends.list-group
					//- li.list-group-item Cras justo odio
			div
				ul#rooms.list-group
					//- li.list-group-item Cras justo odio

			// Modal
			div#roomModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
				div.modal-dialog(role='document')
					div.modal-content
						div.modal-header
							button.close(type='button', data-dismiss='modal', aria-label='Close')
								span(aria-hidden='true') Ã—
							h4#myModalLabel.modal-title Modal title
						div.modal-body
							div
								ul#messages
								input#m(autocomplete='off')
								button#msgbtn Send					
						div.modal-footer
							button.btn.btn-default(type='button', data-dismiss='modal') Close

		script(src='https://cdn.socket.io/socket.io-1.2.0.js')
		script(src='/bower_components/jquery/dist/jquery.min.js')
		script(src='/bower_components/bootstrap/dist/js/bootstrap.min.js')
		script(src='/javascripts/clientui.js')
